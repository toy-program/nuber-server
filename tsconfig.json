{
	"compilerOptions": {
		"lib": ["es5", "es6"],
		"outDir": "build/compiled",
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"importHelpers": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"declaration": true,
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"stripInternal": true,
		"pretty": true,
		"strictNullChecks": true,
		"noUnusedLocals": false,
		"downlevelIteration": true
	},
	"exclude": [
		"node_modules",
		"build",
		"scripts",
		"acceptance-tests",
		"webpack",
		"jest",
		"src/setupTests.ts"
	]
}
